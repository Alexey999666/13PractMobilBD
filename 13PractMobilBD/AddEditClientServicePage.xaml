<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_13PractMobilBD.AddEditClientServicePage"
             Title="Запись на услугу">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Выбор клиента -->
            <StackLayout>
                <Label Text="Клиент:" 
                       FontSize="14" 
                       TextColor="#333"/>
                <Picker x:Name="pickerClient"
                        Title="Выберите клиента"
                        ItemDisplayBinding="{Binding LastName}"
                        FontSize="16"/>
            </StackLayout>

            <!-- Выбор услуги -->
            <StackLayout>
                <Label Text="Услуга:" 
                       FontSize="14" 
                       TextColor="#333"/>
                <Picker x:Name="pickerService"
                        Title="Выберите услугу"
                        ItemDisplayBinding="{Binding Name}"
                        FontSize="16"/>
            </StackLayout>

            <!-- Дата и время -->
            <StackLayout>
                <Label Text="Дата и время:" 
                       FontSize="14" 
                       TextColor="#333"/>
                <DatePicker x:Name="datePicker"
                            FontSize="16"/>
                <TimePicker x:Name="timePicker"
                            FontSize="16"/>
            </StackLayout>

            <!-- Кнопки -->
            <StackLayout Spacing="10" Margin="0,20,0,0">
                <Button x:Name="btnSave"
                        Text="Сохранить"
                        Clicked="OnSaveClicked"
                        BackgroundColor="DarkViolet"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>

                <Button x:Name="btnDelete"
                        Text="Удалить"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"
                        IsVisible="False"/>

                <Button Text="Отмена"
                        Clicked="OnCancelClicked"
                        BackgroundColor="#9E9E9E"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
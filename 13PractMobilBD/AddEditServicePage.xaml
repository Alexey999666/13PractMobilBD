<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_13PractMobilBD.AddEditServicePage"
             Title="Услуга">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

           
            <Label x:Name="lblCode" 
                   Text="Код: " 
                   FontSize="16"
                   TextColor="#555"
                   IsVisible="False"/>

           
            <StackLayout>
                <Label Text="Название услуги:" 
                       FontSize="14" 
                       TextColor="#333"/>
                <Entry x:Name="txtName" 
                       Placeholder="Введите название"
                       FontSize="16"/>
            </StackLayout>

            
            <StackLayout>
                <Label Text="Цена:" 
                       FontSize="14" 
                       TextColor="#333"/>
                <Entry x:Name="txtPrice" 
                       Placeholder="0.00"
                       FontSize="16"
                       Keyboard="Numeric"/>
            </StackLayout>

          
            <StackLayout Spacing="10" Margin="0,20,0,0">

               
                <Button x:Name="btnSave"
                        Text="Сохранить"
                        Clicked="OnSaveClicked"
                        BackgroundColor="DarkViolet"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>

                
                <Button x:Name="btnDelete"
                        Text="Удалить"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"
                        IsVisible="False"/>

                
                <Button Text="Отмена"
                        Clicked="OnCancelClicked"
                        BackgroundColor="#9E9E9E"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>

            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>